<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" >


        <!-- -->
        <TextView
            android:id="@+id/label1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
            android:gravity="center"
            android:text="Fixtures" />

        <me.itangqi.waveloadingview.WaveLoadingView
            android:id="@+id/waveLoadingView1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:wlv_borderColor="@color/primary"
            app:wlv_borderWidth="3dp"
            app:wlv_progressValue="10"
            app:wlv_shapeType="circle"

            app:wlv_titleCenter="Center Title"
            app:wlv_titleCenterColor="@color/colorPrimaryText"
            app:wlv_titleCenterSize="24sp"

            app:wlv_waveAmplitude="40"
            app:wlv_waveColor="@color/primary"
            android:padding="20dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center" />


        <!-- -->
        <TextView
            android:id="@+id/label2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
            android:gravity="center"
            android:text="Fixtures" />

        <me.itangqi.waveloadingview.WaveLoadingView
            android:id="@+id/waveLoadingView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:wlv_borderColor="@color/accent"
            app:wlv_borderWidth="3dp"
            app:wlv_progressValue="40"
            app:wlv_shapeType="circle"

            app:wlv_titleCenter="Center Title"
            app:wlv_titleCenterColor="@color/colorPrimaryText"
            app:wlv_titleCenterSize="24sp"

            app:wlv_waveAmplitude="40"
            app:wlv_waveColor="@color/accent"
            android:padding="20dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center" />

    </LinearLayout>


</LinearLayout>